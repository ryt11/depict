<%= form_for @user do |f| %>

<div class="form">

  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-spacing">
      <%= f.text_field :username, placeholder: "Username" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-spacing">
      <%= f.text_field :email, placeholder: "E-mail" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-spacing">
    <%= f.password_field :password, placeholder: "Password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-spacing">
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
    </div>
  </div>

    <%= f.submit "Create Account", class: "depict-btn btn" %>
</div>
<%end%>
